{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Executive IDE",
  "version": "1.0.0",
  "identifier": "com.executiveide.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/public"
  },
  "app": {
    "windows": [
      {
        "title": "Executive IDE",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "category": "Productivity",
    "shortDescription": "Personal command center for executives",
    "longDescription": "Executive IDE is an IDE-inspired workspace for managing priorities, projects, notes, people, and action items with relationship-driven tagging.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
